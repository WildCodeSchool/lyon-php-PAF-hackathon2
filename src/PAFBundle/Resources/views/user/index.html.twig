{% extends 'PAFBundle::base.html.twig' %}

{% block body %}
    {% include 'PAFBundle:chat:header.html.twig' %}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <table class="bordered centered">
                    <tbody>
                        <tr>
                            <td><img class="img-panel" src="{{ asset('img/avatar/' ~ user.picture) }}"></td>
                            <td>{{ user.name }}</td>
                            <td>
                                <a class="btn-floating btn-large waves-effect waves-light" href="/account/edit/{{ user.id }}">
                                    <i class="material-icons">create</i> </a>
                                <a class="btn-floating btn-large waves-effect waves-light" href="/account/{{ user.id }}">
                                    <i class="material-icons">clear</i> </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}


